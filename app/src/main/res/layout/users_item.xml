<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/item_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/disability"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="18 anos"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/created"
        app:layout_constraintTop_toBottomOf="@id/name"
        />

    <TextView
        android:id="@+id/disability"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sem deficiência"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_weight="1"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/created"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inserção em 10/02/32 às 18h30"
        android:textColor="@color/white"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintHorizontal_weight="1"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disability"
        />



</androidx.constraintlayout.widget.ConstraintLayout>